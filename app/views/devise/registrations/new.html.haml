%h2 会員登録
= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = f.error_notification
  .form-inputs
    .form-group
      = f.input :name, required: true, autofocus: true,label: 'ユーザ名'
    .form-group
      = f.input :email, required: true, label: 'メールアドレス'
    .form-group
      = f.input :password, required: true, hint: ("#{@minimum_password_length} 文字以上" if @validatable), label: 'パスワード'
    .form-group
      = f.input :password_confirmation, required: true, label: 'パスワード（再入力）'
  .form-actions
    = f.button :submit, "登録", :class => "btn btn-primary"
%p
= render "devise/shared/links"
